{
    "model": "BaseModel",
    "metric": "accuracy",
    "num_class": 10,
    "valid_ratio": 0.2,

    "hyperparam": {
        "epoch": 50,
        "batch": 8,
        "lr": 1e-5,
        "optimizer": {
            "name": "adam",
            "weight_decay": 0
        },
        "loss": "cross_entropy"
    },

    "transform": [
        {
            "name": "GaussianBlur",
            "args": {
                "kernel_size": [3, 3]
            }
        },
        {
            "name": "RandomInvert",
            "args": {
                "p": 0.5
            }
        }
    ],
    "tta": [],

    "log": {
        "model_dir": "../saved/models/base/",
        "wandb": {
            "project": "base_project",
            "run_name": "base"
        }
    }
}